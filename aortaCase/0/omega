FoamFile
{
    version     2.0;
    format      ascii;
    class       volScalarField;
    object      omega;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [0 0 -1 0 0 0 0];

// Estimate omega = k^0.5 / (C_mu^0.25 * L)
// where L is a length scale (≈10% of diameter) and C_mu = 0.09
// omega ≈ 0.0006^0.5 / (0.09^0.25 * 0.0025) ≈ 100
internalField   uniform 100;

boundaryField
{
    inlet
    {
        type            fixedValue;
        value           $internalField;
    }

    outlet
    {
        type            zeroGradient;
    }

    wall
    {
        type            omegaWallFunction;
        value           $internalField;
    }
}

// ************************************************************************* //