FoamFile
{
    version     2.0;
    format      ascii;
    class       volScalarField;
    object      k;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [0 2 -2 0 0 0 0];

// Calculate k from turbulence intensity (5%)
// k = 3/2 * (U_avg * I)^2 = 3/2 * (0.4 * 0.05)^2 = 0.0006
internalField   uniform 0.0006;

boundaryField
{
    inlet
    {
        type            fixedValue;
        value           $internalField;
    }

    outlet
    {
        type            zeroGradient;
    }

    wall
    {
        type            kqRWallFunction;
        value           $internalField;
    }
}

// ************************************************************************* //